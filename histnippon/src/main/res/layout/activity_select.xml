<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.SelectActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="クイック１５問"
        android:id="@+id/quickBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="全問題"
        android:id="@+id/everyBtn"
        android:layout_alignTop="@+id/quickBtn"
        android:layout_toRightOf="@+id/quickBtn"
        android:layout_toEndOf="@+id/quickBtn" />
    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="記した問題"
        android:id="@+id/checkedBtn"
        android:layout_below="@+id/everyBtn"
        android:layout_centerHorizontal="true"
        android:onClick="initializeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/quickBtn"
        android:layout_alignStart="@+id/quickBtn"
        android:layout_above="@+id/quickBtn"
        android:layout_alignRight="@+id/everyBtn"
        android:layout_alignEnd="@+id/everyBtn" />

</RelativeLayout>
